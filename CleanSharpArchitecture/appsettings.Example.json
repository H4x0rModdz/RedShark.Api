{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=RedSharkDB;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-here-at-least-32-characters-long",
    "Issuer": "RedShark.API",
    "Audience": "RedShark.Client",
    "ExpiryInHours": 24
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@redshark.com",
    "FromName": "Red-Shark"
  },
  "BlobSettings": {
    "ConnectionString": "your-azure-storage-connection-string",
    "ContainerName": "redshark-media"
  },
  "RateLimiting": {
    "LoginAttempts": 5,
    "RegisterAttempts": 3,
    "PostCreationLimit": 10,
    "GlobalRequestLimit": 1000
  }
}